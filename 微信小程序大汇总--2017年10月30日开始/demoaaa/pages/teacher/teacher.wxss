/* pages/teacher/teacher.wxss */
.clear:after{
	content:'';
	display:block;
	clear:both;
}


.header{
	display:flex;
}
.headtab{
	flex:1;
}
.headtab text{
	display:block;
	text-align:center;
}
.headtab image{
	width:50px;
	height:50px;
	margin-left:20px;
}

.item{
	display:flex;
	margin-top:20px;
}
.item .left{
	flex:1;
	float:left;
}
.item .left image{
	width:100px;
	height:100px;
	border-radius:50%;
	float:left;
}
.item .right{
	flex:4;
	float:left;
	margin-left:10px;
	
}
.item .right .name{
	float:left;
	
}
.item .right .good{
	float:right;
	font-size:16px;
}
.item .right .evaluate{
	margin-top:10px;
	display:block;
	font-size:14px;
}

.active{
  color:#ff0000;
}